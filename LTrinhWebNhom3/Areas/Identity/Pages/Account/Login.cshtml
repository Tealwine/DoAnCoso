@page
@model LoginModel

@{
    ViewData["Title"] = "";
}
   <style>
    .col-md-4 {
        margin: 0 auto;
        float: none;
    }

    .h2 {
        text-align: center;
        color: orange;
    }

    section {
        border: 1px solid #ccc;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .form-check-input:not(:checked) + .form-check-label {
        color: gray;
    }

    .form-check-input:checked + .form-check-label {
        color: blue;
    }

    p {
        margin: 10px 0;
        padding: 5px;
        font-size: 14px;
        color: #333;
    }

        p {
            text-decoration: none;
            color: #007bff;
        }

    section {
        border: 1px solid #ccc;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 5px;
        
        background-image: url('images/1.png');
        background-size: cover;
        background-position: center;
    }
           
   </style>

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <box>
            <section>
                <form id="account" method="post">
                    <h2>LOG IN</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <input class="form-check-input" type="checkbox" id="rememberMe" asp-for="Input.RememberMe">
                        <label class="form-check-label" for="rememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </divbox>
        
    </>
    
</div>
<script>
        const checkbox = document.getElementById('rememberMe');
        checkbox.addEventListener('change', () => {
            if (checkbox.checked) {
                checkbox.nextElementSibling.style.color = 'blue';
            } else {
                checkbox.nextElementSibling.style.color = 'gray';
            }
        });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
