@model LTrinhWebNhom3.Models.PortfolioImage
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Edit Image";
}

<h2>Edit</h2>

<form asp-action="Update" method="post" asp-area="Admin" enctype="multipart/form-data" asp-controller="Image" asp-route-id="@Model.Id">

    <div class="form-group

        <label asp-for="ImageUrl"> Image</label>
        <input type="file" asp-for="ImageURL" class="form-control" id="imageInput" /> <br />
        <img id="previewImage" style="max-width: 200px; display: none;" alt="Image preview" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary mt-3 px-3">Update</button>
</form>


<script>
    document.getElementById('imageInput').addEventListener('change', function (event) {
        var output = document.getElementById('previewImage');
        if (this.files && this.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                output.src = e.target.result;
                output.style.display = 'block'; // Show the image
            };
            reader.readAsDataURL(this.files[0]);
        }
    });
</script>